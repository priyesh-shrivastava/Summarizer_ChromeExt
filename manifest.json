{

  "manifest_version": 3,
  "name": "Web Summarizer",
  "version": "1.0",
  "description": "Summarize web pages efficiently.",

  "permissions": [
    "activeTab", 
    "scripting",  
    "storage"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": { 
    "default_popup": "popup.html",

    "default_icon": {
      "16": "icons/2.png",
      "48": "icons/2.png",
      "128": "icons/2.png"
    }

  },

  "icons": {
    "16": "icons/2.png",
    "48": "icons/2.png",
    "128": "icons/2.png"
  }

}  
